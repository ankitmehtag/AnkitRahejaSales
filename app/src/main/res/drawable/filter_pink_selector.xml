<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval">
        	<solid
        		android:color="#66E3067E" />
            <stroke
                android:width="0dp"
                android:color="#000000" />
            <corners
                android:radius="50dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
             <gradient
                android:startColor="#E3067E"
                android:endColor="#E3067E"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#e07017" />
            <corners
                android:radius="50dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>