<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle">
            
        	<solid
        		android:color="#663FA9E2" />
            <stroke
                android:width="0dp"
                android:color="#666666" />
           <corners
	        android:bottomLeftRadius="0dp"
	        android:bottomRightRadius="0dp"
	        android:topLeftRadius="0dp"
	        android:topRightRadius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
             <gradient
                android:startColor="#3FA9E2"
                android:endColor="#3FA9E2"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#e07017" />
           <corners
	        android:bottomLeftRadius="0dp"
	        android:bottomRightRadius="0dp"
	        android:topLeftRadius="0dp"
	        android:topRightRadius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>