<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:context="com.example.demo1.Enquiry" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/blue_color"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/make_an_enquiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="Make an Enquiry"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <ImageButton
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:src="@drawable/close" 
                android:background="@android:color/transparent"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <!-- <TextView -->
            <!-- android:id="@+id/tvLabelName" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_weight="0.2" -->
            <!-- android:text="Project Name" -->
            <!-- android:textColor="#676767" -->
            <!-- android:textSize="14sp" /> -->

            <TextView
                android:id="@+id/tv_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:background="@null"
                android:ems="10"
                android:gravity="top|left"
                android:hint="Enter Project Name"
                android:minLines="1"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D4D8D8" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <!-- <TextView -->
            <!-- android:layout_width="0dp" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_weight="0.2" -->
            <!-- android:text="Name" -->
            <!-- android:textSize="14sp" -->
            <!-- android:textColor="#676767" /> -->

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:background="@null"
                android:ems="10"
                android:gravity="top|left"
                android:hint=" Name"
                android:minLines="1"
                android:padding="6dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D4D8D8" >
            </LinearLayout>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="0.8"
                android:background="@null"
                android:ems="10"
                android:gravity="top|left"
                android:hint="Email"
                android:minLines="1"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D4D8D8" >
            </LinearLayout>

            <!-- <TextView -->
            <!-- android:id="@+id/mobile_s" -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_marginTop="10dp" -->
            <!-- android:text="Mobile" -->
            <!-- android:textColor="#676767" -->
            <!-- android:textSize="14sp" /> -->

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:background="@null"
                android:ems="10"
                android:gravity="top|left"
                android:hint="Mobile Number"
                android:inputType="number"
                android:maxLength="10"
                android:minLines="1"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D4D8D8" >
            </LinearLayout>
        </LinearLayout>

        <!-- <LinearLayout -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_marginTop="10dp" -->
        <!-- android:gravity="center_vertical" -->
        <!-- android:orientation="horizontal" -->
        <!-- android:paddingLeft="15dp" -->
        <!-- android:paddingRight="15dp" > -->


        <!-- <TextView -->
        <!-- android:layout_width="0dp" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_weight="0.2" -->
        <!-- android:text="Email" -->
        <!-- android:textColor="#676767" /> -->


        <!-- <EditText -->
        <!-- android:id="@+id/Edemail" -->
        <!-- android:layout_width="0dp" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_gravity="center" -->
        <!-- android:layout_weight="0.8" -->
        <!-- android:background="@drawable/edit_text_background" -->
        <!-- android:ems="10" -->
        <!-- android:gravity="top|left" -->
        <!-- android:hint="Enter Email" -->
        <!-- android:minLines="1" -->
        <!-- android:padding="10dp" -->
        <!-- android:textColorHint="#999999" /> -->
        <!-- </LinearLayout> -->

        <EditText
            android:id="@+id/edwrite_enquiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:ems="10"
            android:gravity="top|left"
            android:hint="Write Your Enquiry"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#D4D8D8" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/terms_conition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/cb_tnc"
                android:layout_alignBottom="@+id/cb_tnc"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/cb_tnc"
                android:layout_weight="0.21"
                android:text="@string/set_terms"
                android:textColor="@color/blue_color"
                android:textSize="17sp"
                android:textStyle="bold" />

            <!-- <CheckBox -->
            <!-- android:id="@+id/checkBox1" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_alignParentLeft="true" -->
            <!-- android:layout_alignParentTop="true" -->
            <!-- android:layout_marginLeft="40dp" -->
            <!-- android:text="CheckBox" -->
            <!-- android:buttonTint="#009688" -->
            <!-- android:textColor="#000000" /> -->

            <CheckBox
                android:id="@+id/cb_tnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:buttonTint="@color/blue_color"
                android:gravity="center"
                android:text="@string/set_time"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" >

            <!-- <Button -->
            <!-- android:id="@+id/btnCancel" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="40dp" -->
            <!-- android:layout_marginBottom="5dp" -->
            <!-- android:layout_marginLeft="15dp" -->
            <!-- android:layout_marginTop="10dp" -->
            <!-- android:background="@drawable/send_button" -->
            <!-- android:text="CANCEL" -->
            <!-- android:textColor="#FFFFFF" -->
            <!-- android:textSize="15sp" -->
            <!-- android:textStyle="bold" /> -->

            <Button
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/blue_color"
                android:text="SEND"
                android:textColor="@color/text_state_white_grey"
                android:textSize="22sp" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>