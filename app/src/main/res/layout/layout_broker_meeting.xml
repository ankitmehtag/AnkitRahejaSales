<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_corporate_activity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_40"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/margin_ten"
        android:paddingStart="@dimen/margin_ten"
        android:weightSum="2.3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1.3"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_select_broker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/txt_select_broker"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_select_broker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_divider_select_broker"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@drawable/my_textview_custom_bg"
        android:orientation="horizontal"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_40"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/margin_five"
        android:paddingStart="@dimen/margin_ten"
        android:visibility="visible"
        android:weightSum="2.3">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="@string/address"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/tv_broker_meeting_address_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/my_textview_custom_bg"
            android:hint="@string/txt_enter_meeting_address"
            android:drawableRight="@drawable/ic_mode_edit_black"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider_address"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@drawable/my_textview_custom_bg"
        android:orientation="horizontal"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_meeting_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_40"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/margin_five"
        android:paddingStart="@dimen/margin_ten"
        android:visibility="visible"
        android:weightSum="2.3">

        <TextView
            android:id="@+id/tv_meeting_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="@string/txt_meeting_date"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_meeting_date_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/my_textview_custom_bg"
            android:drawableRight="@drawable/calendar"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider_meeting_date"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@drawable/my_textview_custom_bg"
        android:orientation="horizontal"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_meeting_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_40"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/margin_five"
        android:paddingStart="@dimen/margin_ten"
        android:visibility="visible"
        android:weightSum="2.3">

        <TextView
            android:id="@+id/tv_meeting_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="@string/txt_meeting_time"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_meeting_time_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/my_textview_custom_bg"
            android:drawableRight="@drawable/ic_meeting_time"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/view_divider_meeting_date_time"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@drawable/my_textview_custom_bg"
        android:orientation="horizontal"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/margin_five"
        android:paddingStart="@dimen/margin_ten"
        android:visibility="visible"
        android:weightSum="2.3">

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="@string/remark"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/tv_remark_val"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_40"
            android:layout_weight="1"
            android:background="@drawable/my_textview_custom_bg"
            android:hint="@string/txt_enter_remarks"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>