<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pagerHeightProjects" >

        <ImageView
            android:id="@+id/imgFeaturedProj"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/layout_linear"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imgFeaturedProj"
            android:background="@drawable/layout_white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvProjName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:maxWidth="300dp"
                android:singleLine="true"
                android:text="Ayana"
                android:textColor="#383838"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/bhk_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:maxWidth="310dp"
                android:singleLine="true"
                android:text="1/2/3 BHK FLATS"
                android:textColor="#4A4949"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvBuilderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text=""
                android:textColor="#383838"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvProjAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:maxWidth="310dp"
                android:singleLine="true"
                android:text="Sec 8,Gurgaon"
                android:textColor="#4A4949"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="Arial"
                    android:text="@string/price_marker"
                    android:textColor="#383838"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/price_proj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/price"
                    android:text="@string/price_proj"
                    android:textColor="#383838"
                    android:textSize="20sp" />

                <!-- <TextView -->
                <!-- android:id="@+id/onwords" -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_centerVertical="true" -->
                <!-- android:layout_marginLeft="5dp" -->
                <!-- android:layout_marginTop="7dp" -->
                <!-- android:layout_toRightOf="@+id/price_proj" -->
                <!-- android:text="onwards+" -->
                <!-- android:textColor="#4A4949" -->
                <!-- android:textSize="18sp" /> -->

                <ImageView
                    android:id="@+id/imageViewFav"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/new_heart" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>