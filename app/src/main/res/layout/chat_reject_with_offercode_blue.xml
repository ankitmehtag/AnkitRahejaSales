<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_date"
        style="@style/tv_chat_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"
        android:text="20 Jan 2017"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/chat_bubble_blue"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_offer_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/offer_code"
            android:background="@drawable/blue_ovel"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/accept_reject"
                android:layout_width="80dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/tv_rejected"
                style="@style/tv_chat_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offer Rejected" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_msg"
            style="@style/tv_chat_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Hi I am interested to buy this unit." />
        <TextView
            android:id="@+id/tv_payment_plan"
            style="@style/tv_chat_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Plan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_coupon_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/blue_ovel"
                android:padding="5dp"
                android:text="@string/offer_code"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_proceed_to_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/blue_ovel"
                android:text="Proceed To Pay"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            style="@style/tv_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:text="12:08 PM" />
    </LinearLayout>

</LinearLayout>