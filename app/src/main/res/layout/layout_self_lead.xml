<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_ten"
            android:paddingEnd="@dimen/margin_ten"
            android:weightSum="2.3">

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/txt_name"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/tv_customer_name_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_textview_custom_bg"
                android:hint="@string/txt_customer_name"
                android:inputType="text"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_email_id_divider"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/my_textview_custom_bg"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/linear_layout_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_ten"
            android:paddingEnd="@dimen/margin_ten"
            android:weightSum="2.3">

            <TextView
                android:id="@+id/tv_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/txt_email_id"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/tv_email_id_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_textview_custom_bg"
                android:hint="@string/txt_customer_email"
                android:inputType="textEmailAddress"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/my_textview_custom_bg"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_ten"
            android:paddingEnd="@dimen/margin_ten"
            android:weightSum="2.3">

            <TextView
                android:id="@+id/tv_mobile_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/txt_mobile_no"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/tv_mobile_no_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_textview_custom_bg"
                android:ems="10"
                android:hint="@string/enter_mobile"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/my_textview_custom_bg" />

        <LinearLayout
            android:id="@+id/layout_tv_project_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_40"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_ten"
            android:paddingEnd="@dimen/margin_ten"
            android:weightSum="2.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1.5"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/txt_project_name"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_project_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@color/transparent"
                        android:gravity="left"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_down" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_alternate_mobile_no_divider"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/my_textview_custom_bg"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/linear_layout_alternate_mobile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_ten"
            android:paddingEnd="@dimen/margin_ten"
            android:weightSum="2.3">

            <TextView
                android:id="@+id/tv_alternate_mobile_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/txt_alternate_mobile_no"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/tv_alternate_mobile_no_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_textview_custom_bg"
                android:hint="@string/txt_alternate_mobile_no"
                android:inputType="number"
                android:maxLength="10"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/my_textview_custom_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_ten"
            android:paddingEnd="@dimen/margin_ten"
            android:weightSum="2.5">

            <TextView
                android:id="@+id/tv_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="@string/txt_budget_range"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_budget_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_budget_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight=".5"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_min_budget"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_40"
                        android:layout_alignParentTop="true"
                        android:background="@color/transparent"
                        android:gravity="left"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/margin_5"
                        android:src="@drawable/arrow_down" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight=".5"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_max_budget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@color/transparent"
                        android:gravity="left"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/margin_5"
                        android:src="@drawable/arrow_down" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/my_textview_custom_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_ten"
            android:paddingEnd="@dimen/margin_ten"
            android:weightSum="2.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1.5"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_current_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/text_status"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_lead_status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:background="@color/transparent"
                        android:gravity="left"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_down" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_last_updated_on_divider_self"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/my_textview_custom_bg"
            android:orientation="vertical"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/layout_select_lead_self"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_date_self"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/margin_ten"
                android:paddingEnd="@dimen/margin_ten"
                android:visibility="visible"
                android:weightSum="2.3">

                <TextView
                    android:id="@+id/tv_date_self"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="@string/txt_typed_date"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_date_val_self"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/my_textview_custom_bg"
                    android:drawableEnd="@drawable/ic_meeting_date"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_time_divider_self"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@drawable/my_textview_custom_bg"
                android:orientation="vertical"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/layout_time_self"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/margin_ten"
                android:paddingEnd="@dimen/margin_ten"
                android:visibility="visible"
                android:weightSum="2.3">

                <TextView
                    android:id="@+id/tv_time_self"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="@string/txt_meeting_time"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_time_val_self"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/my_textview_custom_bg"
                    android:drawableEnd="@drawable/ic_meeting_time"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_address_divider_self"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@drawable/my_textview_custom_bg"
                android:orientation="vertical"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/layout_no_of_persons_self"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/margin_ten"
                android:paddingEnd="@dimen/margin_ten"
                android:weightSum="2.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1.5"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_no_of_persons_self"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/txt_no_of_person"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_no_of_persons_self"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:background="@color/white"
                            android:gravity="start"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/arrow_down" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_no_of_persons_self_divider"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@drawable/my_textview_custom_bg"
                android:orientation="vertical"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/layout_address_self"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_40"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/margin_ten"
                android:paddingEnd="@dimen/margin_five"
                android:weightSum="2.3">

                <TextView
                    android:id="@+id/tv_address_self"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="@string/txt_meeting_address"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/tv_address_val_self"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/my_textview_custom_bg"
                    android:hint="@string/address"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_lead_type_divider_self"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@drawable/my_textview_custom_bg"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/layout_lead_type_self"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_ten"
                android:paddingEnd="@dimen/margin_ten"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_lead_type_self"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:text="@string/txt_lead_type"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroup_self"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_ten"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:layout_marginEnd="@dimen/margin_ten"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp">

                    <RadioButton
                        android:id="@+id/radioButton_hot_self"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/red"
                        android:paddingStart="@dimen/margin_five"
                        android:paddingEnd="@dimen/margin_5"
                        android:text="@string/txt_hot"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioButton
                        android:id="@+id/radioButton_warm_self"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/green_border"
                        android:paddingStart="@dimen/margin_five"
                        android:paddingEnd="@dimen/margin_5"
                        android:text="@string/txt_warm"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioButton
                        android:id="@+id/radioButton_cold_self"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/grey"
                        android:paddingStart="@dimen/margin_five"
                        android:paddingEnd="@dimen/margin_5"
                        android:text="@string/txt_cold"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/edit_text_remark_self"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_five"
                android:layout_marginTop="@dimen/margin_ten"
                android:layout_marginEnd="@dimen/margin_five"
                android:layout_marginBottom="@dimen/margin_ten"
                android:background="@drawable/my_textview_custom_bg"
                android:hint="@string/txt_enter_remarks"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:minLines="2"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.428"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="345dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>