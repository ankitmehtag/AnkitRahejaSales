<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar_brown" />

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:id="@+id/parentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            tools:context="com.queppelin.bookmyhouse.com.bookmyhouse.ContactUsActivity" >

            <!-- <include layout="@layout/app_bar" /> -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C6C6C6"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:text="Get in Touch"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:id="@+id/rl_drop_in_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF" >

                    <ImageView
                        android:id="@+id/iv_drop_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/location_add" />

                    <TextView
                        android:id="@+id/drop_on"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_drop_in"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Drop in"
                        android:textColor="#383838"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_drop_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/drop_on"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:textColor="@color/blue_color"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/img2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:background="#FFFFFF" >

                    <ImageButton
                        android:id="@+id/Give"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/contact" />

                    <TextView
                        android:id="@+id/give_us"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Give"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Give us a call"
                        android:textColor="#383838"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_contact_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/give_us"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:textColor="@color/blue_color"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/img3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:background="#FFFFFF" >

                    <ImageView
                        android:id="@+id/iv_connect_online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/connect" />

                    <TextView
                        android:id="@+id/on_line_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_connect_online"
                        android:layout_centerHorizontal="true"
                        android:text="Connect online"
                        android:textColor="#383838"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_add1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/on_line_text"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:textColor="@color/blue_color"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_add2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_add1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-1dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:textColor="#383838"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/contact_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C6C6C6"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Contact Form"
                android:textColor="#000000"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/editTextName"
                    style="@style/BMHEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="#00000000"
                    android:ems="10"
                    android:hint="First Name"
                    android:maxLength="30"
                    android:padding="5dp"
                    android:textColor="#666666"
                    android:textColorHint="#AAADAD"
                    android:textCursorDrawable="@null" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#D4D8D8" >
                </View>

                <EditText
                    android:id="@+id/editTextEmail"
                    style="@style/BMHEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="#00000000"
                    android:ems="10"
                    android:hint="Email Id"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:padding="5dp"
                    android:textColor="#666666"
                    android:textColorHint="#AAADAD"
                    android:textCursorDrawable="@null" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#D4D8D8" >
                </View>

                <EditText
                    android:id="@+id/editTextPhone"
                    style="@style/BMHEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="#00000000"
                    android:ems="10"
                    android:hint="Phone Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:textColor="#666666"
                    android:textColorHint="#AAADAD"
                    android:textCursorDrawable="@null" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#D4D8D8" >
                </View>

                <EditText
                    android:id="@+id/editTextMessage"
                    style="@style/BMHEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="#00000000"
                    android:gravity="left|top"
                    android:hint="Message"
                    android:imeOptions="actionGo"
                    android:maxLength="500"
                    android:minLines="4"
                    android:padding="5dp"
                    android:singleLine="false"
                    android:textColor="#666666"
                    android:textColorHint="#AAADAD"
                    android:textCursorDrawable="@null" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#D4D8D8" >
                </View>
            </LinearLayout>
            <Button
                android:id="@+id/buttonSend"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gold_needs_selector"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="Send"
                android:textColor="#ffffff"
                android:textSize="22sp" />
        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/default_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="62dp"
        android:visibility="gone"
        android:background="@drawable/no_internet"
        android:orientation="vertical"></LinearLayout>
</RelativeLayout>