<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#714617"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#714617"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/make_an_enquiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:text="Make an Enquiry"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <ImageButton
                    android:id="@+id/img_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:src="@drawable/close" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="0.8"
                android:background="@null"
                android:ems="10"
                android:gravity="top|left"
                android:hint=" Name"
                android:minLines="1"
                android:padding="6dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D4D8D8"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="0.8"
                android:background="@null"
                android:ems="10"
                android:gravity="top|left"
                android:hint="Email"
                android:minLines="1"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D4D8D8" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:background="@null"
                android:ems="10"
                android:gravity="top|left"
                android:hint="Mobile Number"
                 android:inputType="number"
                android:maxLength="10"
                android:minLines="1"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D4D8D8" >
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/terms_conition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/cb_tnc"
                android:layout_alignBottom="@+id/cb_tnc"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/cb_tnc"
                android:layout_weight="0.21"
                android:text="@string/set_terms"
                android:textColor="#0d937c"
                android:textSize="17sp"
                android:textStyle="bold" />

            <!-- <CheckBox -->
            <!-- android:id="@+id/checkBox1" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_alignParentLeft="true" -->
            <!-- android:layout_alignParentTop="true" -->
            <!-- android:layout_marginLeft="40dp" -->
            <!-- android:text="CheckBox" -->
            <!-- android:buttonTint="#009688" -->
            <!-- android:textColor="#000000" /> -->

            <CheckBox
                android:id="@+id/cb_tnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:buttonTint="#009688"
                android:gravity="center"
                android:text="@string/set_time"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="15sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/blue_color"
            android:textColor="@color/text_state_white_yellow"
            android:text="SEND"
            android:textSize="22sp" />
    </LinearLayout>

</RelativeLayout>