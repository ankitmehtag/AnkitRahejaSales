<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="bottom" >

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/discount"
                style="@style/BHMTextVIewStyle"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="DISCOUNT"
                android:textColor="#0d937c"
                android:textSize="18sp" />

            <Button
                android:id="@+id/offers"
                android:layout_width="25dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/crass"
                android:padding="1dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/discount_offers"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/discount"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="5% on BSP"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="14sp" />

            <!-- <RelativeLayout -->
            <!-- android:id="@+id/relativeLayout1" -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="1dp" -->
            <!-- android:layout_alignBottom="@+id/discount_offers" -->
            <!-- android:layout_alignParentLeft="true" -->
            <!-- android:layout_marginTop="10dp" -->
            <!-- android:background="#b6c489" > -->
            <!-- </RelativeLayout> -->

            <TextView
                android:id="@+id/offes"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/discount"
                android:layout_below="@+id/discount_offers"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="OFFER"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#0d937c"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvReturnPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/offes"
                android:gravity="center"
                android:text="Home Loan offer \n 4.99% for the first 5 Years"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>