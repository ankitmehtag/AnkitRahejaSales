<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewAlertTitle"
        style="@style/BHMTextVIewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="8dp"
        android:text="Get notified as soon as a new project is added in this locality."
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnGetAlerts"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/commercial"
        android:drawableRight="@drawable/bell"
        android:minHeight="35dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Get Alerts"
        android:textAllCaps="true"
        android:textColor="@color/text_state_yellow_white"
        android:visibility="visible"
        android:textSize="18sp" />
</LinearLayout>