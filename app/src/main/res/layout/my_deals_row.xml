<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_file_ico"
        android:layout_width="@dimen/button_height_50"
        android:layout_height="@dimen/button_height_50"
        android:layout_below="@+id/tv_date"
        android:background="@color/cb_grey"
        android:scaleType="fitXY"
        android:padding="@dimen/margin_10"
        android:src="@drawable/calendar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="@dimen/margin_5"
            android:weightSum="10">

            <TextView
                android:id="@+id/tv_title"
                style="@style/tv_my_lead_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/cb_eight"
                android:layout_weight="8.5"
                android:maxLines="2"
                android:scrollbars="vertical"
                android:singleLine="true"
                android:text="FILE NAME" />

            <ImageView
                android:id="@+id/iv_download_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginRight="@dimen/margin_3"
                app:srcCompat="@mipmap/download" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_date"
            style="@style/tv_my_lead_row_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/margin_10"
            android:text="Fri,Jan 2,2018" />


    </LinearLayout>


</LinearLayout>