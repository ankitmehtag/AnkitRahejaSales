<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_crousel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp" >

            <ImageView
                android:id="@+id/imageViewLocation"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>

            <TextView
                android:id="@+id/textViewRating"
                style="@style/BHMTextVIewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/ic_star"
                android:gravity="center"
                android:paddingTop="1dp"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/return_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/black_gradient_bg"
                android:drawableLeft="@drawable/returns_year"
                android:padding="4dp"
                android:paddingBottom="3dp"
                android:text="7% in 1 Year"
                android:textColor="#00FF00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2dp" >

            <LinearLayout
                android:id="@+id/ll_locality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewLocation"
                    style="@style/BHMTextVIewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="4dp"
                    android:text="NA"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:maxLines="2"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_sublocation"
                    style="@style/BHMTextVIewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="4dp"
                    android:text="NA"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:singleLine="true"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_below="@+id/ll_locality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="4dp"
                    android:text="@string/priceMark"
                    android:textColor="#000000" 
                    android:fontFamily="Arial"/>

                <TextView
                    android:id="@+id/textViewAvgPrice"
                    style="@style/BHMTextVIewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="4dp"
                    android:maxLines="2"
                    android:text="NA"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_projects"
                android:layout_below="@+id/ll_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textViewNoOfProjects"
                    style="@style/BHMTextVIewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="4dp"
                    android:maxLines="2"
                    android:text="NA"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="4dp">

                <TextView
                    android:id="@+id/tv_infra"
                    style="@style/BHMTextVIewStyle"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/infra_bg"
                    android:gravity="center"
                    android:text="Infra\n1"
                    android:textColor="#ffffff"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tv_needs"
                    style="@style/BHMTextVIewStyle"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/infra_bg"
                    android:gravity="center"
                    android:text="Infra\n1"
                    android:textColor="#ffffff"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tv_lifestyle"
                    style="@style/BHMTextVIewStyle"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/infra_bg"
                    android:gravity="center"
                    android:text="Infra\n1"
                    android:textColor="#ffffff"
                    android:textSize="9sp" />

            </LinearLayout>
          </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/rl_empty_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#59FFFFFF" >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="10dp"
                android:src="@drawable/nosearch"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:text="@string/no_result"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>