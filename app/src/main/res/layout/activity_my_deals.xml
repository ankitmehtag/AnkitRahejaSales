<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_bar"
        android:id="@+id/toolbar"/>

    <LinearLayout
        android:id="@+id/ll_filter_root"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/grey_boarder"
        android:gravity="center"
        android:layout_below="@+id/toolbar">
        <RelativeLayout
            android:id="@+id/rl_from_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="1dp">
            <ImageView
                android:id="@+id/iv_from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/calendar"
                android:layout_marginRight="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/iv_from_date"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_from_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:gravity="center"
                    android:textColor="@color/text_color_grey"
                    android:text="@string/from_date"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:drawablePadding="10dp"/>
                <TextView
                    android:id="@+id/tv_from_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/blue_color"
                    android:textSize="12sp"
                    android:text="Thu,Jul 30,3017"
                    android:paddingBottom="2dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_to_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginRight="1dp">
            <ImageView
                android:id="@+id/iv_to_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/calendar"
                android:layout_marginRight="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/iv_to_date"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_to_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:gravity="center"
                    android:textColor="@color/text_color_grey"
                    android:text="@string/to_date"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:drawablePadding="10dp"/>
                <TextView
                    android:id="@+id/tv_to_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/blue_color"
                    android:textSize="12sp"
                    android:text="Fri,Sep 12,3017"
                    android:paddingBottom="2dp"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/ll_filter_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="@color/grey_boarder">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_deals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:paddingBottom="0dp"/>
        <LinearLayout
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:weightSum="1"
            android:orientation="vertical">
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

